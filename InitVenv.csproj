<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <ApplicationIcon>icon.ico</ApplicationIcon>
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <PublishTrimmed>true</PublishTrimmed>
    <TrimMode>full</TrimMode>

    <!-- Properties -->
    <Company>Dev2Forge</Company>
    <Product>InitVenv</Product>
    <Description>InitVenv - Initialize python virtual environments automatically</Description>
    <AssemblyTitle>$(Description)</AssemblyTitle>
    <Authors>Tutos Rive</Authors>
    <Copyright>© 2025 Dev2Forge</Copyright>

    <!-- Versions -->
    <AssemblyVersion>1.0.0.0</AssemblyVersion>
    <FileVersion>0.1.1.0</FileVersion>
  </PropertyGroup>

  <!-- Windows x86 -->
  <PropertyGroup Condition="'$(RuntimeIdentifier)' == 'win-x86'">
    <AssemblyName>InitVenv-x86</AssemblyName>
  </PropertyGroup>

  <!-- Windows x64 -->
  <PropertyGroup Condition="'$(RuntimeIdentifier)' == 'win-x64'">
    <AssemblyName>InitVenv-x64</AssemblyName>
  </PropertyGroup>

  <!-- Windows ARM64 -->
  <PropertyGroup Condition="'$(RuntimeIdentifier)' == 'win-arm64'">
    <AssemblyName>InitVenv-ARM64</AssemblyName>
  </PropertyGroup>

  <!-- Linux x64 (covers Debian, Fedora, Arch Linux) -->
  <PropertyGroup Condition="'$(RuntimeIdentifier)' == 'linux-x64'">
    <AssemblyName>InitVenv-linux-x64</AssemblyName>
  </PropertyGroup>

  <!-- Linux ARM64 -->
  <PropertyGroup Condition="'$(RuntimeIdentifier)' == 'linux-arm64'">
    <AssemblyName>InitVenv-linux-arm64</AssemblyName>
  </PropertyGroup>

  <ItemGroup>
    <None Include="icon.ico" />
  </ItemGroup>

</Project>
